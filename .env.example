# RowLab v2.0 Environment Configuration
# Copy to .env and update values for your environment

# Database - PostgreSQL connection
DATABASE_URL="postgresql://rowlab:your_password_here@localhost:5432/rowlab_dev"

# Authentication
JWT_SECRET="generate-a-secure-random-string-here"
JWT_REFRESH_SECRET="generate-another-secure-random-string-here"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Concept2 OAuth (for erg data integration)
# Register at https://log.concept2.com/developers/home
CONCEPT2_CLIENT_ID=your_client_id
CONCEPT2_CLIENT_SECRET=your_client_secret
CONCEPT2_REDIRECT_URI=http://localhost:3001/api/v1/concept2/callback
CONCEPT2_WEBHOOK_SECRET=your_webhook_secret_from_concept2

# Strava OAuth (for activity syncing)
# Register at https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_client_id
STRAVA_CLIENT_SECRET=your_client_secret
STRAVA_REDIRECT_URI=http://localhost:3001/api/v1/strava/callback

# Encryption (REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_64_char_hex_string_here

# Storage limit in bytes (20GB default)
STORAGE_LIMIT_BYTES=21474836480

# Server
PORT=3002
NODE_ENV=development

# Docker Compose (required if using docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=generate_a_secure_password_here
POSTGRES_DB=rowlab

# Data Paths (optional - for migration from v1)
# HEADSHOTS_PATH=/path/to/headshots
# ATHLETES_CSV=/path/to/athletes.csv
