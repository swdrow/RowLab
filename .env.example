# RowLab v2.0 Environment Configuration
# Copy to .env and update values for your environment

# Database - PostgreSQL connection
DATABASE_URL="postgresql://rowlab:your_password_here@localhost:5432/rowlab_dev"

# Authentication
JWT_SECRET="generate-a-secure-random-string-here"
JWT_REFRESH_SECRET="generate-another-secure-random-string-here"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Concept2 API (for erg data integration)
# Register at https://log.concept2.com/developers/home
CONCEPT2_CLIENT_ID=""
CONCEPT2_CLIENT_SECRET=""
CONCEPT2_REDIRECT_URI="http://localhost:3002/api/concept2/callback"

# Storage limit in bytes (20GB default)
STORAGE_LIMIT_BYTES=21474836480

# Server
PORT=3002
NODE_ENV=development

# Data Paths (optional - for migration from v1)
# HEADSHOTS_PATH=/path/to/headshots
# ATHLETES_CSV=/path/to/athletes.csv
